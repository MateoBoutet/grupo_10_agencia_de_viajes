<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head.ejs'); -%>
    <title>Productos</title>
    <!-------vinculo hoja de estilo css-->
    <link rel="stylesheet" href="/css/index.css" />
    <!-----------vinculo hoja de estilo modal y js-->
    <link rel="stylesheet" href="/css/modal.css" />
    <script src="/js/modal.js"></script>
</head>

<body>
  <%- include('partials/header.ejs'); -%>
    <main>
      <div class="contenedor">
        <form action="/paquetes/search" class="search-bar">
          <input type="text" placeholder="Busca tu destino" name="q" />
          <button type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
      </div>
      <section class="destacados">
        <% servicios.forEach(servicio=> { %>
          <article class="producto">
            <a href="/paquetes/detail/<%= servicio.id %>">
              <img src="/img/paquetes/<%= servicio.imagen%>" alt="<%= servicio.destino %>" class="imagenes"/>
             <section class="articulo">
              <i class="fa-solid fa-plane-departure"></i>
              <div class="nombres-precios">
                <h3 class="nombres"><%= servicio.destino %></h3>
                <div class="borde"></div>
                <div class="precios-tarifa">
                  <h2 class="precios">$<%= servicio.precio %></h2>
                  <h4 class="tarifa">Tarifa por una persona: <%= servicio.precio %></h4>
                </div>
                <button class="button-model" id="myBtn">Detalle</button>
                <!-------------Modal-->
                <div id="myModal" class="modal">
                  <div class="modal-content">
                    <span class="close"></span>
                    <a href="/paquetes/detail/<%= servicio.id %>">
                      <img src="/img/paquetes/<%= servicio.imagen%>" alt="<%= servicio.destino %>" class="imagenes"/>
                    <p>detalle capilla</p>
                    <div class="desde-hasta">
                      <div class="desde">
                        <label for="desde">Desde:</label>
                        <div>
                          <input type="date" id="desde" value="fecha_actual" />
                        </div>
                      </div>
                      <div class="hasta">
                        <label for="hasta">Hasta:</label>
                        <div>
                          <input type="date" id="hasta" value="fecha_actual" />
                        </div>
                      </div>
                      <button class="button-model">Agregar viaje</button>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </article>
          <% }) %>
      </section>
    </main>
    <footer>
      <%- include('partials/footer.ejs'); -%>
    </footer>
</body>

</html>