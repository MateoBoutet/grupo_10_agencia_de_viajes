                <h2 class="precios">$39.631</h2>
                <h4 class="tarifa">Tarifa por una persona</h4>
              </div>
              <button class="button-model" id="myBtn">Detalle</button>
              <!-------------Modal-->
              <div id="myModal" class="modal">
                <div class="modal-content">
                  <span class="close">&times;</span>
                  <img src="/img/villa-carlos-paz.jpg" alt="Imagen del producto"/>
                  <p>detalle capilla</p>
                  <div class="desde-hasta">
                    <div class="desde">
                      <label for="desde">Desde:</label>
                      <div>
                        <input type="date" id="desde" value="fecha_actual" />
                      </div>
                    </div>
                    <div class="hasta">
                      <label for="hasta">Hasta:</label>
                      <div>
                        <input type="date" id="hasta" value="fecha_actual" />
